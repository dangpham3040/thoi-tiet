<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
  >

    <LinearLayout
      android:orientation="horizontal"
        android:layout_width="200dp"
        android:layout_height="75dp">
        <ImageView
            android:id="@+id/ivThoiTiet"
            android:layout_width="70dp"
            android:layout_height="75dp"
            android:src="@drawable/matroi"
            android:layout_marginRight="20dp"/>
        <LinearLayout

            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:text="Nhiệt độ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="Tốc độ gió"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="Tầm nhìn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="Thời gian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#7500f7"
        android:orientation="vertical">

        <TextView
            android:textColor="@color/white"
            android:id="@+id/tvNhietDo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Max: 23 Now: 23 Min: 22" />

        <TextView
            android:textColor="@color/white"
            android:id="@+id/tvTocDo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3.24 Km/h" />

        <TextView
            android:textColor="@color/white"
            android:id="@+id/tvTamNhin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="1000m" />

        <TextView
            android:textColor="@color/white"
            android:id="@+id/tvThoiGian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="7/10/2021" />
    </LinearLayout>

</LinearLayout>